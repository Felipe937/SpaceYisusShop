{
  "version": 2,
  "builds": [
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.json",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/producto/([^/]+)", "dest": "/producto.html?id=$1" },
    { "src": "/product/([^/]+)", "dest": "/producto.html?id=$1" },
    { "src": "/(.*)", "dest": "/index.html" },
    { "src": "/", "dest": "/index.html" }
  ]
}
