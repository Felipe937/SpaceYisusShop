  <!-- Productos destacados -->
  <section class="featured" id="featured">
    <h2>âœ¨ Productos Destacados âœ¨</h2>
    <div class="products">
      {% assign dser_collection = collections['dsers-products'] %}
      {% if dser_collection.products != blank %}
        {% for product in dser_collection.products limit:4 %}
          {% if product.available %}
            <div class="product-card">
              <a href="{{ product.url }}">
                {% if product.featured_image %}
                  <img src="{{ product.featured_image | img_url: '480x480' }}" alt="Imagen de {{ product.title }}">
                {% else %}
                  <img src="https://via.placeholder.com/300x220" alt="{{ product.title }}">
                {% endif %}
              </a>
              <h3>{{ product.title }}</h3>
              <p>{{ product.variants.first.price | money }}</p>
              <a href="{{ product.url }}">
                <button class="btn-buy">Comprar</button>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      {% else %}
