<!-- templates/index.liquid -->

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SpaceYisus Shop</title>
  <style>
    :root {
      --color-primary: #9333ea;
      --color-secondary: #1e3a8a;
      --color-dark: #0b0f1a;
      --color-card: #1f2937;
      --color-accent: #ffd700;
      --color-text: #ffffff;
    }

    html { scroll-behavior: smooth; }

    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: var(--color-dark);
      color: var(--color-text);
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    header {
      background: linear-gradient(90deg, var(--color-secondary), var(--color-primary));
      padding: 0.8rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    header h1 {
      margin: 0;
      font-size: 1.5rem;
      font-weight: bold;
      display: flex;
      align-items: center;
    }

    nav a {
      color: white;
      margin-left: 2rem;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    nav a:hover { color: var(--color-accent); }

    .hero {
      text-align: center;
      padding: 6rem 2rem;
      background: url('https://logisber.com/contenido/subidas/2023/06/empresa-de-transporte-maritimo-seguro-personalizado-a-medida.jpg') no-repeat center center/cover;
      color: #fff;
      position: relative;
    }

    .hero::after {
      content: "";
      position: absolute;
      top:0; left:0;
      width:100%; height:100%;
      background: rgba(0,0,0,0.4);
    }

    .hero-content {
      position: relative;
      z-index: 1;
      max-width: 800px;
      margin: auto;
    }

    .hero h2 { font-size: 2.8rem; margin-bottom: 1rem; }
    .hero p { font-size: 1.2rem; margin-bottom: 2rem; }

    .hero a.button {
      background: var(--color-primary);
      color: white;
      border: none;
      padding: 0.9rem 2rem;
      font-size: 1.1rem;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.3s ease;
      text-decoration: none;
    }

    .hero a.button:hover { background: #7e22ce; }

    .featured {
      text-align: center;
      margin: 3rem auto;
      max-width: 1200px;
    }

    .featured h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      color: var(--color-accent);
    }

    .products {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      padding: 0 2rem;
    }

    .product-card {
      background: var(--color-card);
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 6px 16px rgba(0,0,0,0.4);
      text-align: center;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .product-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 24px rgba(0,0,0,0.5);
    }

    .product-card img {
      width: 100%;
      height: 220px;
      object-fit: cover;
    }

    .product-card h3 {
      margin: 1rem 1rem 0.5rem;
      font-size: 1rem;
      min-height: 60px;
    }

    .product-card p {
      margin: 0.5rem 0 1rem;
      font-weight: bold;
      color: var(--color-accent);
    }

    .btn-buy {
      background: var(--color-primary);
      color: white;
      border: none;
      padding: 0.7rem 1.5rem;
      margin: 1rem auto 1.5rem;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
      transition: background 0.3s ease;
    }

    .btn-buy:hover { background: #7e22ce; }

    .btn-catalogo {
      display: inline-block;
      margin-top: 2rem;
      padding: 1rem 2rem;
      background: var(--color-secondary);
      color: #fff;
      border-radius: 8px;
      text-decoration: none;
      font-weight: bold;
      transition: background 0.3s ease;
    }

    .btn-catalogo:hover { background: var(--color-primary); }

    footer {
      text-align: center;
      background: #111827;
      padding: 1.5rem;
      font-size: 0.9rem;
      margin-top: auto;
    }
  </style>
</head>
<body>

