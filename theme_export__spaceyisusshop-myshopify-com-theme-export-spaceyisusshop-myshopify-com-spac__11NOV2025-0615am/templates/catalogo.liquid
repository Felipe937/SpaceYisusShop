<script>
document.addEventListener('DOMContentLoaded', function() {
  // Referencias a elementos
  const searchInput = document.getElementById('productSearch');
  const sortFilter = document.getElementById('sortFilter');
  const categoryFilter = document.getElementById('categoryFilter');
  const productsGrid = document.getElementById('productsGrid');
  const loadingState = document.getElementById('loadingState');
  const productCards = document.querySelectorAll('.product-card');
  const quickAddButtons = document.querySelectorAll('.quick-add');
  const modal = document.getElementById('quickAddModal');
  
  // Función de búsqueda
  function filterProducts() {
    const searchTerm = searchInput.value.toLowerCase();
    const sortValue = sortFilter.value;
    const categoryValue = categoryFilter.value;
    
    let visibleCards = Array.from(productCards).filter(card => {
      const productName = card.querySelector('.product-title a').textContent.toLowerCase();
      const productTags = Array.from(card.querySelectorAll('.product-tag')).map(tag => tag.textContent.toLowerCase());
      
      const matchesSearch = productName.includes(searchTerm);
      
      let matchesCategory = true;
      if (categoryValue !== 'all') {
        matchesCategory = productTags.includes(categoryValue);
        if (!matchesCategory) {
            matchesCategory = productName.includes(categoryValue);
        }
      }
      
      return matchesSearch && matchesCategory;
    });
    
    // Ocultar todas las tarjetas
    productCards.forEach(card => {
      card.style.display = 'none';
      card.classList.remove('animate-in');
    });
    
    // Ordenar productos
    if (sortValue !== 'default') {
      sortProducts(visibleCards, sortValue);
    }
    
    // Mostrar tarjetas filtradas y animar entrada
    visibleCards.forEach((card, index) => {
      card.style.display = 'flex';
      card.style.animationDelay = `${index * 0.05}s`;
      card.classList.add('animate-in');
    });

    // Update product count
    const productsCountSpan = document.querySelector('.products-count');
    if (productsCountSpan) {
        productsCountSpan.textContent = `${visibleCards.length} productos encontrados`;
    }
  }
  
  // Función de ordenamiento
  function sortProducts(cards, sortType) {
    const sortedCards = cards.sort((a, b) => {
      switch (sortType) {
        case 'price-low':
          const priceA = parseFloat(a.dataset.price || a.querySelector('.price-current').textContent.replace(/[^0-9,-]+/g, "").replace(",", "."));
          const priceB = parseFloat(b.dataset.price || b.querySelector('.price-current').textContent.replace(/[^0-9,-]+/g, "").replace(",", "."));
          return priceA - priceB;
        case 'price-high':
          const priceAH = parseFloat(a.dataset.price || a.querySelector('.price-current').textContent.replace(/[^0-9,-]+/g, "").replace(",", "."));
          const priceBH = parseFloat(b.dataset.price || b.querySelector('.price-current').textContent.replace(/[^0-9,-]+/g, "").replace(",", "."));
          return priceBH - priceAH;
        case 'name':
          const nameA = a.querySelector('.product-title a').textContent.toLowerCase();
          const nameB = a.querySelector('.product-title a').textContent.toLowerCase();
          return nameA.localeCompare(nameB);
        default:
          return 0;
      }
    });
    
    // Reordenar en el DOM
    productsGrid.innerHTML = '';
    sortedCards.forEach(card => {
      productsGrid.appendChild(card);
    });
  }
  
  // Event listeners
  searchInput.addEventListener('input', debounce(filterProducts, 300));
  sortFilter.addEventListener('change', filterProducts);
  categoryFilter.addEventListener('change', filterProducts);
  
  // Inicializar filtros y ordenamiento al cargar la página
  filterProducts();

  // Función debounce para optimizar búsqueda
  function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
      const later = () => {
        clearTimeout(timeout);
        func(...args);
      };
      clearTimeout(timeout);
      timeout = setTimeout(later, wait);
    };
  }
  
  // Quick Add Modal functionality
  quickAddButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      const productId = this.dataset.productId;
      openQuickAddModal(productId);
    });
  });
  
  function openQuickAddModal(productId) {
    if (modal) {
      modal.style.display = 'flex';
      const modalBody = modal.querySelector('.modal-body');
      modalBody.innerHTML = `
        <div style="padding: 2rem; text-align: center;">
          <h3 style="color: var(--text-primary); margin-bottom: 1rem;">Producto añadido</h3>
          <p style="color: var(--text-secondary);">El producto se ha añadido al carrito correctamente.</p>
        </div>
      `;
      
      // Auto-cerrar después de 2 segundos
      setTimeout(() => {
        closeModal();
      }, 2000);
    }
  }
  
  function closeModal() {
    if (modal) {
      modal.style.display = 'none';
    }
  }
  
  // Cerrar modal al hacer clic en overlay o botón cerrar
  if (modal) {
    const modalOverlay = modal.querySelector('.modal-overlay');
    const modalClose = modal.querySelector('.modal-close');
    
    modalOverlay.addEventListener('click', closeModal);
    modalClose.addEventListener('click', closeModal);
    
    // Cerrar con ESC
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && modal.style.display === 'flex') {
        closeModal();
      }
    });
  }
  
  // Lazy loading para imágenes
  const imageObserver = new IntersectionObserver((entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const img = entry.target;
        if (img.dataset.src) {
            img.src = img.dataset.src;
            img.removeAttribute('data-src');
            img.classList.add('loaded');
        }
        observer.unobserve(img);
      }
    });
  });
  
  // Aplicar lazy loading a imágenes que tengan data-src
  document.querySelectorAll('img[data-src]').forEach(img => {
    imageObserver.observe(img);
  });
  
  // Smooth scroll para paginación
  document.querySelectorAll('.catalog-pagination a').forEach(link => {
    link.addEventListener('click', function(e) {
      if (this.hash) {
        e.preventDefault();
        const targetElement = document.querySelector(this.hash);
        if (targetElement) {
          targetElement.scrollIntoView({ behavior: 'smooth' });
        }
      }
    });
  });
  
  // Animación de entrada para las tarjetas
  const cardObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
          entry.target.classList.add('animate-in');
          cardObserver.unobserve(entry.target);
      }
    });
  }, {
    threshold: 0.1
  });
  
  productCards.forEach(card => {
    cardObserver.observe(card);
  });
});
</script>