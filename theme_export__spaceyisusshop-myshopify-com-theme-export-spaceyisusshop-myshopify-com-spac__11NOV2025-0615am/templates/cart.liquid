<div class="cart-page-container">
  <div class="cart-header">
    <h1 class="cart-title">Tu Carrito</h1>
  </div>

  <div id="loadingState" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; justify-content: center; align-items: center;">
    <div style="padding: 20px; background: white; border-radius: 10px;">Cargando...</div>
  </div>

  {% if cart.item_count == 0 %}
    <div class="empty-state">
      <div class="empty-state-icon">
        <svg viewBox="0 0 24 24"><path d="M17.21 9.08a2.5 2.5 0 0 0-2.3-2.3l-1.87-.27-.84-1.74a2.5 2.5 0 0 0-4.43 0l-.84 1.74-1.87.27a2.5 2.5 0 0 0-1.28 4.28l1.37 1.34-.32 1.88a2.5 2.5 0 0 0 3.63 2.64L12 17.27l1.69.89a2.5 2.5 0 0 0 3.63-2.64l-.32-1.88 1.37-1.34a2.5 2.5 0 0 0-1.29-4.28z"/></svg>
      </div>
      <h3>Tu carrito está vacío</h3>
      <p>¡Parece que aún no has agregado productos! Explora nuestro catálogo y encuentra lo que necesitas.</p>
      <a href="/collections/all" class="btn-primary">Explorar productos</a>
      <a href="/" class="btn-secondary">Volver al inicio</a>
    </div>
  {% else %}
    <form action="/cart" method="post" class="cart-form">
      <div class="cart-items" id="cart-items-container">
        {% for item in cart.items %}
          <div class="cart-item" data-line-item-key="{{ item.key }}">
            <div class="cart-item-image-container">
              <a href="{{ item.url }}">
                <img src="{{ item.image | img_url: '100x100' }}" alt="{{ item.title }}" class="cart-item-image">
              </a>
            </div>
            <div class="cart-item-info">
              <a href="{{ item.url }}" class="cart-item-title">{{ item.product.title }}</a>
              {% if item.variant.title != 'Default Title' %}
                <p class="cart-item-variant">{{ item.variant.title }}</p>
              {% endif %}
            </div>
            <div class="cart-item-controls">
              <div class="quantity-selector">
                <button type="button" class="quantity-btn minus" data-line-item-key="{{ item.key }}">-</button>
                <input type="number" name="updates[]" id="updates_{{ forloop.index }}" value="{{ item.quantity }}" min="0" class="quantity-input" data-line-item-key="{{ item.key }}">
                <button type="button" class="quantity-btn plus" data-line-item-key="{{ item.key }}">+</button>
              </div>
              <a href="/cart/change?line={{ forloop.index }}&quantity=0" class="cart-item-remove" data-line-item-key="{{ item.key }}">Eliminar</a>
            </div>
            <div class="cart-item-price">
              <span class="price-current">{{ item.line_price | money }}</span>
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="cart-summary">
        <div class="subtotal-info">
          <span class="subtotal-label">Subtotal:</span>
          <span class="subtotal-price" id="cart-subtotal-price">{{ cart.total_price | money }}</span>
        </div>
        <div class="disclaimer">
          Los gastos de envío y los impuestos se calcularán en la página de pago.
        </div>
        <button type="submit" name="checkout" class="btn-primary checkout-btn">Ir a Pagar</button>
        <button type="submit" name="update" class="btn-secondary update-btn" style="display:none;">Actualizar Carrito</button>
        <button type="button" class="btn-secondary clear-cart-btn">Vaciar carrito</button>
        <button type="button" onclick="location.href='/'" class="btn-secondary">Volver al inicio</button>
      </div>
    </form>
  {% endif %}
</div>

<style>
/* Estilos para la página del carrito */
.cart-page-container {
  max-width: 900px;
  margin: 4rem auto;
  padding: 0 2rem;
}

.cart-header {
  text-align: center;
  margin-bottom: 2rem;
}

.cart-title {
  font-size: clamp(2rem, 5vw, 3rem);
  font-weight: 800;
  color: var(--text-primary);
}

.cart-form {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.cart-items {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.cart-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  transition: all 0.3s ease;
}

.cart-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
}

.cart-item-image-container {
  flex-shrink: 0;
}

.cart-item-image {
  width: 100px;
  height: 100px;
  object-fit: cover;
  border-radius: 8px;
  border: 1px solid var(--border-color);
}

.cart-item-info {
  flex: 1;
}

.cart-item-title {
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text-primary);
  text-decoration: none;
  transition: color 0.3s ease;
}

.cart-item-title:hover {
  color: var(--primary-color);
}

.cart-item-variant {
  font-size: 0.9rem;
  color: var(--text-secondary);
  margin: 0.25rem 0 0;
}

.cart-item-controls {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
}

.quantity-selector {
  display: flex;
  align-items: center;
  background: var(--glass-bg);
  border: 1px solid var(--border-color);
  border-radius: 8px;
  overflow: hidden;
}

.quantity-btn {
  background: none;
  border: none;
  color: var(--text-primary);
  width: 40px;
  height: 40px;
  font-size: 1.5rem;
  cursor: pointer;
  transition: background 0.2s ease;
}

.quantity-btn:hover {
  background: rgba(255, 255, 255, 0.1);
}

.quantity-input {
  width: 50px;
  text-align: center;
  background: none;
  border: none;
  color: var(--text-primary);
  font-size: 1rem;
  padding: 0.5rem 0;
}

.quantity-input:focus {
  outline: none;
}

/* Oculta los controles de incremento/decremento de los inputs tipo number */
input[type="number"]::-webkit-inner-spin-button,
input[type="number"]::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.cart-item-remove {
  font-size: 0.8rem;
  color: #ff4545;
  text-decoration: none;
  transition: color 0.2s ease;
}

.cart-item-remove:hover {
  text-decoration: underline;
}

.cart-item-price {
  min-width: 100px;
  text-align: right;
}

.price-current {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--primary-color);
}

.cart-summary {
  padding: 2rem;
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.subtotal-info {
  display: flex;
  justify-content: space-between;
  font-size: 1.5rem;
  font-weight: 700;
}

.subtotal-label {
  color: var(--text-primary);
}

.subtotal-price {
  color: var(--primary-color);
}

.disclaimer {
  font-size: 0.9rem;
  color: var(--text-secondary);
  text-align: center;
}

.btn-primary.checkout-btn {
  width: 100%;
  padding: 1.25rem 2rem;
  font-size: 1.2rem;
  text-align: center;
}

.btn-secondary.update-btn,
.btn-secondary.clear-cart-btn,
.btn-secondary {
  width: 100%;
  text-align: center;
  font-size: 1.1rem;
}

/* Responsivo */
@media (max-width: 768px) {
  .cart-item {
    flex-wrap: wrap;
    text-align: center;
    justify-content: center;
    gap: 1.5rem;
  }
  
  .cart-item-info {
    flex-basis: 100%;
  }
  
  .cart-item-controls {
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
  }
  
  .cart-item-price {
    text-align: center;
    width: 100%;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const loadingState = document.getElementById('loadingState');

  // Formatea dinero usando Intl (en COP). Ajusta locale/moneda si lo necesitas.
  Shopify.formatMoney = function(cents) {
    try {
      return new Intl.NumberFormat("es-CO", {
        style: "currency",
        currency: "COP"
      }).format(cents / 100);
    } catch (e) {
      // Fallback sencillo
      return (cents / 100).toFixed(2);
    }
  }

  // Actualiza la UI del carrito (se usa AJAX)
  async function updateCartUI() {
    if (loadingState) loadingState.style.display = 'flex';

    try {
      const response = await fetch('/cart.js');
      const cartData = await response.json();

      const cartItemsContainer = document.getElementById('cart-items-container');
      const cartSubtotal = document.getElementById('cart-subtotal-price');
      if (!cartItemsContainer || !cartSubtotal) return;

      cartItemsContainer.innerHTML = '';

      if (cartData.item_count > 0) {
        cartData.items.forEach(item => {
          // Usa propiedades seguras con fallback
          const title = item.title || item.product_title || '';
          const variantTitle = item.variant_title || '';
          const image = item.image || '';
          const url = item.url || '#';
          const linePriceCents = (item.price || 0) * (item.quantity || 1); // precio por unidad * cantidad

          const itemHtml = `
            <div class="cart-item" data-line-item-key="${item.key}">
              <div class="cart-item-image-container">
                <a href="${url}">
                  <img src="${image}" alt="${title}" class="cart-item-image">
                </a>
              </div>
              <div class="cart-item-info">
                <a href="${url}" class="cart-item-title">${title}</a>
                ${variantTitle && variantTitle !== 'Default Title' ? `<p class="cart-item-variant">${variantTitle}</p>` : ''}
              </div>
              <div class="cart-item-controls">
                <div class="quantity-selector">
                  <button type="button" class="quantity-btn minus" data-line-item-key="${item.key}">-</button>
                  <input type="number" name="updates[]" value="${item.quantity}" min="0" class="quantity-input" data-line-item-key="${item.key}">
                  <button type="button" class="quantity-btn plus" data-line-item-key="${item.key}">+</button>
                </div>
                <button class="cart-item-remove" data-line-item-key="${item.key}">Eliminar</button>
              </div>
              <div class="cart-item-price">
                <span class="price-current">${Shopify.formatMoney(linePriceCents)}</span>
              </div>
            </div>
          `;
          cartItemsContainer.innerHTML += itemHtml;
        });

        cartSubtotal.textContent = Shopify.formatMoney(cartData.total_price);
        const checkoutBtn = document.querySelector('.checkout-btn');
        if (checkoutBtn) checkoutBtn.style.display = 'block';
        const updateBtn = document.querySelector('.update-btn');
        if (updateBtn) updateBtn.style.display = 'none';
      } else {
        cartItemsContainer.innerHTML = '<p style="text-align: center; color: var(--text-secondary);">Tu carrito está vacío.</p>';
        cartSubtotal.textContent = Shopify.formatMoney(0);
        const checkoutBtn = document.querySelector('.checkout-btn');
        if (checkoutBtn) checkoutBtn.style.display = 'none';
        const updateBtn = document.querySelector('.update-btn');
        if (updateBtn) updateBtn.style.display = 'none';
      }
    } catch (error) {
      console.error('Error al obtener los datos del carrito:', error);
    } finally {
      if (loadingState) loadingState.style.display = 'none';
    }
  }

  // Delegación de eventos para cantidad y eliminar
  const cartContainer = document.getElementById('cart-items-container');
  if (cartContainer) {
    cartContainer.addEventListener('click', async function(e) {
      if (e.target.classList.contains('quantity-btn') || e.target.classList.contains('cart-item-remove')) {
        const key = e.target.dataset.lineItemKey;
        const input = document.querySelector(`.quantity-input[data-line-item-key="${key}"]`);
        let quantity = input ? parseInt(input.value, 10) : 0;

        if (e.target.classList.contains('plus')) {
          quantity = (isNaN(quantity) ? 0 : quantity) + 1;
        } else if (e.target.classList.contains('minus') && quantity > 1) {
          quantity = quantity - 1;
        } else if (e.target.classList.contains('cart-item-remove') || (e.target.classList.contains('minus') && quantity === 1)) {
          quantity = 0;
        }

        try {
          if (loadingState) loadingState.style.display = 'flex';
          await fetch('/cart/change.js', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id: key, quantity: quantity })
          });
          await updateCartUI();
        } catch (error) {
          console.error('Error al actualizar el carrito:', error);
        } finally {
          if (loadingState) loadingState.style.display = 'none';
        }
      }
    });

    // Cambios directos en inputs de cantidad
    cartContainer.addEventListener('change', async function(e) {
      if (e.target.classList.contains('quantity-input')) {
        const key = e.target.dataset.lineItemKey;
        const quantity = parseInt(e.target.value, 10);
        try {
          if (loadingState) loadingState.style.display = 'flex';
          await fetch('/cart/change.js', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id: key, quantity: quantity })
          });
          await updateCartUI();
        } catch (error) {
          console.error('Error al actualizar el carrito:', error);
        } finally {
          if (loadingState) loadingState.style.display = 'none';
        }
      }
    });
  }

  // Vaciar carrito
  const clearBtn = document.querySelector('.clear-cart-btn');
  if (clearBtn) {
    clearBtn.addEventListener('click', async function() {
      try {
        if (loadingState) loadingState.style.display = 'flex';
        await fetch('/cart/clear.js', { method: 'POST' });
        await updateCartUI();
      } catch (error) {
        console.error('Error al vaciar el carrito:', error);
      } finally {
        if (loadingState) loadingState.style.display = 'none';
      }
    });
  }

  // Inicia con la UI actualizada (asegura coherencia si cambió el carrito)
  updateCartUI();
});
</script>